---
const {imgSrc, altText, title, dlLink} = Astro.props;
---
<div class="flex">
    <div class="bg-purple-800 p-2 rounded-lg">
      <img
        src={imgSrc}
        alt={altText}
        height="300"
        width="300"
        class="cover rounded-lg lg:w-[350px]"
      />
      <h2 class="text-center text-xl sm:text-xl py-2 text-white">
     {title}
         </h2>
      <div class="my-1">
        <p class="text-white text-center">
            <a href={dlLink} target="_blank" rel="noopener noreferrer">
                Listen / Purchase
            </a>
        </p>
      </div>
    </div>
</div>